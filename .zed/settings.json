// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
  "agent": {
    "always_allow_tool_actions": true,
    "expand_terminal_card": true,
    "single_file_review": true
  },
  "context_servers": {
    "hyper-mcp": {
      "enabled": true,
      "command": "hyper-mcp",
      "args": ["--config-file", "/home/sevir/.config/hyper-mcp/assistant.yaml"]
    },
    "mycommandmcp": {
      "env": {},
      "enabled": true,
      "command": "mycommandmcp",
      "args": ["--config", "/www/MCP/remembrances-mcp/.ai/mycommand-mcp.yaml"]
    },
    "remembrances": {
      "env": {},
      "enabled": true,
      "command": "./build/remembrances-mcp",
      "args": ["--config", "./config.sample.gguf.yaml"]
    },
    "serena": {
      "env": {},
      "enabled": true,
      "command": "pkgx",
      "args": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "/www/MCP/remembrances-mcp"
      ]
    }
  }
}
