// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
  "agent": {
    "always_allow_tool_actions": true,
    "expand_terminal_card": true,
    "single_file_review": true,
  },
  "context_servers": {
    "hyper-mcp": {
      "enabled": true,
      "command": "hyper-mcp",
      "args": [
        "--config-file",
        "/home/sevir/.config/hyper-mcp/assistant.yaml"
      ],
    },
    "mycommandmcp": {
      "env": {},
      "enabled": true,
      "command": "mycommandmcp",
      "args": [
        "--config",
        "/www/MCP/remembrances-mcp/.ai/mycommand-mcp.yaml"
      ],
    },
    "remembrances": {
      "env": {},
      "enabled": true,
      "command": "remembrances-mcp-beta",
      "args": [
        "--config",
        "/www/MCP/remembrances-mcp/.ai/remembrances.config.yaml"
      ]
    },
    "chrome-devtools": {
      "env": {},
      "enabled": true,
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest",
        "--isolated=true",
        "--acceptInsecureCerts=true",
      ],
    },
  },
}